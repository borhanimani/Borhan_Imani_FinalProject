{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
        <div class="sign-box">
            <h1 style="font-family: sans-serif; color: #3b82f6">Sign in</h1>

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.userIdentifier }}, <a
                                href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div for="username">Email</div>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control"
                       autocomplete="email" required autofocus>
                <div for="password">Password</div>
                <input type="password" name="_password" id="password" class="form-control"
                       autocomplete="current-password"
                       required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <div>
                    <button class="btn btn-lg btn-primary" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
