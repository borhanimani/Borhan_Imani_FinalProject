{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="title-box">
        <h1 class="title">Categories</h1>
            <a class="create-btn" href="{{ path('app_category_new') }}">Create new</a>
    </div>
    <div class="product-list-box">
        {% for category in categories %}
            <div class="product-box">
                <div>
                    <h2>{{ category.name }}</h2>
                </div>
                <div style=" margin-bottom:30px ;width: 100%; display: flex; flex-direction: row; justify-content: space-between; align-items: center">
                    <div style="border: solid #3b82f6 1px; border-radius: 5px; height: 20px; ">
                        <a class="normal-title" href="{{ path('app_category_show', {'id': category.id}) }}">show</a>
                        <a class="normal-title" href="{{ path('app_category_edit', {'id': category.id}) }}">edit</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div style="margin: 30px"><h2> no records found</h2></div>
        {% endfor %}
    </div>
{% endblock %}
